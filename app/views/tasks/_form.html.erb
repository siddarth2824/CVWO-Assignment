<%= form_with model: @task, local: true do |form| %>

    <% if @task.errors.any? %>
      <div id="error_explanation">
        <h2>
            <%= pluralize(@task.errors.count, "error") %>
    prohibited 
        this to-do task from being being saved:
        </h2>
        <ul>
            <% @task.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
      </div>
    <% end %>

    <p>
        <%= form.label :item %><br>
        <%= form.text_field :item %>
    </p>

    <p>
        <%= form.label :description %><br>
        <%= form.text_area :description %>
    </p>

    <p>
        <%= form.label :due_date %><br>
        <%= form.text_field :due %>
    </p> 

    <p>
        <%= form.label :tag_list, "Tags (seperated by commas)" %><br>
        <%= form.text_field :tag_list, value: form.object.tag_list.to_s %>
    </p>
    
    <p>
        <%= form.submit %>
    </p>

<% end %>